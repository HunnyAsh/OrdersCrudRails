<%= form_with(model: order , local: true ) do |f| %>
  <% if @order.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@order.errors.count,"Error/s") %>
    </h2>
    <ul>
      <% @order.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <div id="notice"><%= flash[:notice] %></div>
  <%= f.label :name, "Name" %>
  <%= f.text_field :name %>
  <br><br>
  <%= f.label :purchased_by, "Purchased By" %>
  <%= f.text_field :purchased_by %>
  <br><br>
  <%= f.label :product_price, "Price" %>
  <%= f.number_field (:product_price) %>
  <br><br>
  <%= f.submit %>
<% end %>