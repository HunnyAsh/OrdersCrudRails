<h1>New Order</h1>
<%= form_with scope: :order, url: orders_path , local: true do |f| %>
<%= f.label :name, "Name" %>
<%= f.text_field :name %>
<br><br>
<%= f.label :purchased_by, "Purchased By" %>
<%= f.text_field :purchased_by %>
<br><br>
<%= f.label :product_price, "Price" %>
<%= f.number_field (:product_price) %>
<br><br>
<%= f.submit %>
<% end %>